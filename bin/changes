#!/bin/sh

TEMP=`getopt -o '' --long 'since:,in:' -- "$@"`
eval set -- "$TEMP"
while true
do
  case "$1" in
    --since)
      since=$2
      shift 2 ;;
    --in)
      in=$2
      shift 2 ;;
    --)
      shift
      break ;;
  esac
done

if [ "$in" != "" ]
  then
    targets=`cat "$in" | xargs echo`
  else
    targets="$@"
fi

if [ -e $since ]
  then
    changed=`find $targets -newer $since`
    [ "$changed" != "" ]
  else
    true
fi
